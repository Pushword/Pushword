includes:
    - vendor/composer/pcre/extension.neon
    - vendor/phpstan/phpstan-doctrine/extension.neon
    - vendor/phpstan/phpstan-doctrine/rules.neon
    - vendor/phpstan/phpstan-phpunit/extension.neon
    - vendor/phpstan/phpstan-phpunit/rules.neon
    - vendor/phpstan/phpstan-strict-rules/rules.neon
    - vendor/phpstan/phpstan-symfony/extension.neon
    - vendor/phpstan/phpstan-symfony/rules.neon
    - vendor/tomasvotruba/unused-public/config/extension.neon

parameters:
    level: max
    paths:
        - rector.php
        - packages/admin/src
        - packages/admin/tests
        - packages/admin-block-editor/src
        - packages/admin-block-editor/tests
        - packages/advanced-main-image/src
        - packages/conversation/src
        - packages/conversation/tests
        - packages/core/src
        - packages/core/tests
        - packages/flat/src
        - packages/flat/tests
        - packages/installer/src
        - packages/page-scanner/src
        - packages/page-scanner/tests
        - packages/page-update-notifier/src
        - packages/page-update-notifier/tests
        - packages/skeleton/src
        - packages/skeleton/tests
        - packages/static-generator/src
        - packages/static-generator/tests
        - packages/template-editor/src
        - packages/template-editor/tests
        - packages/version/src
        - packages/version/tests
    excludePaths:
        - packages/installer/src/PostInstall.php
        - packages/core/tests/DependencyInjection/PushwordConfigFactoryTest.php
    symfony:
        containerXmlPath: /tmp/com.github.pushword.pushword/tests/var/dev/cache/App_KernelDevDebugContainer.xml
        consoleApplicationLoader: packages/skeleton/bin/console-test.php
    doctrine:
        objectManagerLoader: packages/skeleton/bin/object-test.php
    unused_public:
        methods: false
        properties: false
        constants: false
    ignoreErrors:
        - '#Short ternary operator is not allowed#'
        # Symfony 7.4+ TreeBuilder generics are not well supported by PHPStan
        # Expected with resolve_target_entities remapping core User to App\Entity\User
        - '#type mapping mismatch.*Pushword\\Core\\Entity\\User.*App\\Entity\\User#'
