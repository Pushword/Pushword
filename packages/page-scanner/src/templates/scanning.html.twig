{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}{{ 'page_scannerTitle'|trans }}{% endblock %}

{% block page_actions %}
    <a class="btn btn-outline-secondary" href="{{ path('admin_page_scanner') }}">
        <i class="fa fa-sync-alt me-2" aria-hidden="true"></i>{{ 'page_scannerRefresh'|trans }}
    </a>
{% endblock %}

{% block main %}
    <div class="mb-3">
        {% if startTime %}
            <p class="text-muted mb-0"><small>{{ 'page_scannerStartedAt'|trans }}: {{ startTime|date('d/m/Y Ã  H:i:s') }}</small></p>
        {% endif %}
    </div>

    <div id="scanner-output-container"
         hx-get="{{ path('admin_page_scanner_output') }}"
         hx-trigger="load"
         hx-swap="innerHTML">
        <div class="d-flex align-items-center">
            <i class="fa fa-circle-notch fa-spin me-2"></i>
            <span>{{ 'page_scannerStarting'|trans }}</span>
        </div>
    </div>
{% endblock %}
