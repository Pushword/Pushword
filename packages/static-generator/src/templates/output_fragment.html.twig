{# Wrapper div that will be swapped on each poll #}
<div id="static-output-content"
     {% if status == 'running' %}
       hx-get="{{ path('admin_static_generator_output', {host: host|default('')}) }}"
       hx-trigger="load delay:500ms"
       hx-swap="outerHTML"
       hx-target="#static-output-content"
     {% endif %}>

  {# Status indicator #}
  {% if status == 'running' %}
    <div class="d-flex align-items-center mb-3" id="status-indicator">
      <i class="fa fa-circle-notch fa-spin me-2"></i>
      <strong>{{ 'adminStaticGenerating'|trans }}</strong>
    </div>
  {% elseif status == 'completed' %}
    <div class="alert alert-success mb-3" id="status-indicator">
      <i class="fa fa-check-circle me-2"></i>
      {{ 'adminStaticUpdated'|trans }}
    </div>
  {% else %}
    <div class="alert alert-warning mb-3" id="status-indicator">
      <h5 class="alert-heading">
        <i class="fa fa-exclamation-triangle me-2"></i>
        {{ 'adminStaticErrors'|trans }}
      </h5>
      <div class="mb-0">
        {% for error in errors %}
          <p class="mb-1">{{ error }}</p>
        {% endfor %}
      </div>
    </div>
  {% endif %}

  {# Console output - always show full output #}
  {% if output is defined and output is not empty %}
    <div class="card">
      <div class="card-body p-0">
        <pre id="console-output" class="mb-0 bg-dark text-white p-3 rounded" style="max-height: 500px; overflow-y: auto;"><code>{{ output }}</code></pre>
      </div>
    </div>
    {% if status == 'running' %}
      <script>
        (function() {
          var el = document.getElementById('console-output');
          if (el) el.scrollTop = el.scrollHeight;
        })();
      </script>
    {% endif %}
  {% endif %}

</div>
