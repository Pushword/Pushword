RewriteEngine on
RewriteBase /

Options -Indexes
DirectorySlash Off

AddDefaultCharset UTF-8

{% block before_rules %}
{% endblock %}

#---
# Redirect www subfolder (or other) to domain.tld
#---
RewriteCond %{HTTP_HOST} !^{{ domain }}
RewriteRule ^(.*)$ https://{{ domain }}/$1 [L,R=301,END]

#---
# Redirect http to https
#---
RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*) https://{{ domain }}/$1  [QSA,L,R=301,END]

#---
# Redirect index.html to /
#---
RewriteRule ^index\.(html|php|aspx|cfm|html)$ https://{{ domain }}/ [QSA,L,R=301,END]

#---
# Redirect old media to new (patch for site updated from Pushword/Core v0.0.5
#---
RewriteRule ^media/(small_thumb|thumb|height_300|xs|sm|md|lg|xl|default)/media(.*)$ /media/$1$2 [QSA,L,R=301,END]

{% if redirections is not empty %}
#---
# Page Redirection
#---
{{ redirections|raw }}
{% endif %}

#---
# Fix linking behavior
#---

# First we redirect if requested uri end with a slash
RewriteCond %{REQUEST_URI} ^/(.*)/$
RewriteCond %{DOCUMENT_ROOT}/%1.html -f
RewriteRule ^(.+)/$ /$1 [NC,L,R=301,END]

# Static generator generate slug in slug.html
# So we redirect request /slug to slug.html if file exists
RewriteCond %{REQUEST_URI} ([a-zA-Z0-9][\-A-Za-z0-9_\/\.]*$)
RewriteCond %{DOCUMENT_ROOT}/%1.html -f
RewriteRule ^(.+)$ $1.html [NC,L,END]

# Permit to redirect slug.html to slug (except if slug is slug.html)
RewriteCond %{REQUEST_URI} ^/?(.*).(html)$
RewriteCond %{DOCUMENT_ROOT}/%1.html -f
RewriteRule ^/?(.*).(html)$ /$1 [R=301,NC,L,END]

#---
# Errors
#---
ErrorDocument 403 /404
ErrorDocument 404 /404
ErrorDocument 500 /404

#---
# Forbid access to Caddyfile
#---
RewriteRule ^\.Caddyfile$ - [F]

#---
# Precompressed Files (Zstandard, Brotli & Gzip)
#---
<IfModule mod_rewrite.c>
    # Check for Zstandard support (priority: zstd > brotli > gzip)
    RewriteCond %{HTTP:Accept-Encoding} zstd
    RewriteCond %{REQUEST_FILENAME}.zst -f
    RewriteRule ^(.*)$ $1.zst [L]

    # Check for Brotli support
    RewriteCond %{HTTP:Accept-Encoding} br
    RewriteCond %{REQUEST_FILENAME}.br -f
    RewriteRule ^(.*)$ $1.br [L]

    # Check for Gzip support
    RewriteCond %{HTTP:Accept-Encoding} gzip
    RewriteCond %{REQUEST_FILENAME}.gz -f
    RewriteRule ^(.*)$ $1.gz [L]
</IfModule>

<IfModule mod_headers.c>
    # Serve correct encoding and content type for precompressed files
    <FilesMatch "\.zst$">
        Header set Content-Encoding zstd
        Header set Vary Accept-Encoding
    </FilesMatch>

    <FilesMatch "\.br$">
        Header set Content-Encoding br
        Header set Vary Accept-Encoding
    </FilesMatch>

    <FilesMatch "\.gz$">
        Header set Content-Encoding gzip
        Header set Vary Accept-Encoding
    </FilesMatch>
</IfModule>

<IfModule mod_mime.c>
    # Preserve MIME types for compressed files
    RemoveType .gz .br .zst
    AddEncoding zstd .zst
    AddEncoding br .br
    AddEncoding gzip .gz
</IfModule>

#---
# Security Headers
#---
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    Header unset Server
</IfModule>

#---
# Cache
#---
<IfModule mod_headers.c>
    Header set Connection keep-alive
    FileETag Size

    # HTML, TXT, XML and others: 1 hour
    Header set Cache-Control "max-age=3600, public"

    # Assets: 1 year
    <filesMatch "\.(ico|pdf|flv|jpg|JPG|jpeg|png|gif|webp|avif|svg|eot|ttf|woff|woff2|js|css)$">
        Header set Cache-Control "max-age=31536000, public"
    </filesMatch>
</IfModule>

# ---
# GZIP
# ---
<IfModule mod_deflate.c>
  # Compress HTML, CSS, JavaScript, Text, XML and fonts
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/rss+xml
  AddOutputFilterByType DEFLATE application/vnd.ms-fontobject
  AddOutputFilterByType DEFLATE application/x-font
  AddOutputFilterByType DEFLATE application/x-font-opentype
  AddOutputFilterByType DEFLATE application/x-font-otf
  AddOutputFilterByType DEFLATE application/x-font-truetype
  AddOutputFilterByType DEFLATE application/x-font-ttf
  AddOutputFilterByType DEFLATE application/x-javascript
  AddOutputFilterByType DEFLATE application/xhtml+xml
  AddOutputFilterByType DEFLATE application/xml
  AddOutputFilterByType DEFLATE font/opentype
  AddOutputFilterByType DEFLATE font/otf
  AddOutputFilterByType DEFLATE font/ttf
  AddOutputFilterByType DEFLATE image/svg+xml
  AddOutputFilterByType DEFLATE image/x-icon
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/javascript
  AddOutputFilterByType DEFLATE text/plain
  AddOutputFilterByType DEFLATE text/xml
</IfModule>

{% block after_rules %}
{% endblock %}
