{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}{{ 'admin.static.generating'|trans }}{% endblock %}

{% block page_actions %}
    <a class="btn btn-outline-secondary" href="{{ path('admin_static_generator') }}">
        <i class="fa fa-sync-alt me-2" aria-hidden="true"></i>Actualiser
    </a>
{% endblock %}

{% block main %}
    <meta http-equiv="refresh" content="3">
    <div class="alert alert-info" role="alert">
        <div class="d-flex align-items-center mb-2">
            <i class="fa fa-circle-notch fa-spin me-2"></i>
            <strong>{{ 'admin.static.please_wait'|trans }}</strong>
        </div>
        {% if startTime %}
            <p class="mb-1"><small>{{ 'admin.static.started_at'|trans }}: {{ startTime|date('d/m/Y Ã  H:i:s') }}</small></p>
        {% endif %}
        {% if host %}
            <p class="mb-0"><strong>{{ 'admin.static.host'|trans }}:</strong> {{ host }}</p>
        {% endif %}
    </div>
{% endblock %}
