{% macro nested_list(items, style, block) %}
    {% if items %}
        {{ ((style == 'unordered' ? '<ul' : '<ol') ~ blockWrapperAttr(block) ~ '>')|raw }}
            {% for item in items %}
            {% if item.content is defined %}
                    <li>
                        {{ item.content|raw }}
                        {{ _self.nested_list(item.items, style, block)|raw }}
                    </li>
            {% else %}
                <li>{{ item|raw }}</li>
            {% endif %}
            {% endfor %}
            {{ (style == 'unordered' ? '</ul>' : '</ol>')|raw }}
    {% endif %}
{% endmacro %}
