{% macro nested_list(items, style, id = '') %}
    {% if items %}
        {{ (style == 'unordered' ? '<ul' : '<ol') ~ blockWrapperId(block.tunes.anchor ?? '') ~ '>'|raw}}
            {% for item in items %}
            {% if item.content is defined %}
                    <li>
                        {{ item.content|raw }}
                        {{ _self.nested_list(item.items, style) }}
                    </li>
            {% else %}
                <li>{{ item|raw }}</li>
            {% endif %}
            {% endfor %}
            {{ style == 'unordered' ? '</ul>' : '</ol>' }}
    {% endif %}
{% endmacro %}
