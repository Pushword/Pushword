{
  "name": "pushword/new",
  "type": "project",
  "license": "MIT",
  "description": "Install a new Pushword instance with ease.",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=8.3",
    "ext-ctype": "*",
    "ext-iconv": "*",
    "symfony/flex": "^1.3.1"
  },
  "flex-require": {
    "symfony/console": "^7.0",
    "symfony/dotenv": "*",
    "symfony/framework-bundle": "^7.0",
    "symfony/runtime": "*",
    "symfony/yaml": "^7.0",
    "pushword/core": "*",
    "pushword/admin": "*",
    "pushword/admin-block-editor": "*",
    "pushword/page-scanner": "*",
    "pushword/static-generator": "*",
    "pushword/template-editor": "*"
  },
  "require-dev": {
    "symfony/profiler-pack": "*",
    "pushword/installer": "^1",
    "pushword/skeleton": "^1",
    "symfony/filesystem": "^7.0"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true,
    "allow-plugins": {
      "symfony/flex": true,
      "symfony/runtime": true
    }
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "replace": {
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-iconv": "*",
    "symfony/polyfill-php72": "*"
  },
  "scripts": {
    "auto-scripts": [],
    "post-install-cmd": [
      "bash ./vendor/pushword/installer/src/installer",
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "Pushword\\Installer\\PostInstall::runPostUpdate",
      "@auto-scripts"
    ],
    "post-autoload-dump": [
      "Pushword\\Installer\\PostAutoloadDump::runPostAutoload"
    ]
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "extra": {
    "symfony": {
      "allow-contrib": true,
      "require": "^7"
    }
  },
  "authors": [
    {
      "name": "Robin@PiedWeb",
      "email": "contact@piedweb.com",
      "homepage": "https://piedweb.com"
    }
  ]
}
