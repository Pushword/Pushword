<?php

use PhpCsFixer\Config;
use Symfony\Component\Finder\Finder;

$finder = Finder::create()
    ->in([
        __DIR__.'/src',
        __DIR__.'/public',
        __DIR__.'/config',
        __DIR__.'/bin',
    ])
    ->name('*.php')
    ->ignoreDotFiles(true)
    ->ignoreVCS(true)
    ->append([
        __DIR__.'/.php-cs-fixer.dist.php',
    ]);

$rules = require __DIR__.'/vendor/pushword/skeleton/php-cs-fixer-rules.php';

return (new Config())
    ->setRules($rules)
    ->setRiskyAllowed(true)
    ->setFinder($finder);
