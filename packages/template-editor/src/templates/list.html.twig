{% extends '@EasyAdmin/page/content.html.twig' %}

{% block head_stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/pushwordadmin/admin.css') }}">
{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    <script src="{{ asset('/bundles/pushwordadmin/admin.js') }}"></script>
{% endblock %}

{% block content_title %}Templates{% endblock %}

{% block page_actions %}
    {% if canCreate %}
        <a class="btn btn-primary" href="{{ path('admin_template_editor_create') }}">
            <i class="fa fa-plus-circle me-2" aria-hidden="true"></i> Ajouter
        </a>
    {% endif %}
{% endblock %}

{% block main %}
<div class="card">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th scope="col">Path</th>
                    <th scope="col" class="text-end">Action</th>
                </tr>
            </thead>
            <tbody>
            {% for element in elements %}
                <tr>
                    <td>
                        <a href="{{ path('admin_template_editor_edit', {encodedPath: element.encodedPath}) }}" class="link-primary text-decoration-none">
                            {{ element.path }}
                        </a>
                    </td>
                    <td class="text-end">
                        <div class="btn-group btn-group-sm" role="group">
                            <a href="{{ path('admin_template_editor_edit', {encodedPath: element.encodedPath}) }}" class="btn btn-outline-primary">
                                <i class="fa fa-edit me-1" aria-hidden="true"></i> Ã‰diter
                            </a>
                            {% if canCreate %}
                                <a href="{{ path('admin_template_editor_delete', {encodedPath: element.encodedPath}) }}" class="btn btn-outline-danger">
                                    <i class="fa fa-times me-1" aria-hidden="true"></i> Supprimer
                                </a>
                            {% endif %}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2" class="text-center text-muted py-4">
                        Aucun template disponible.
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
