{% set id = 'sh-' ~ random(1000, 9999) %}
{% use '@PushwordCore/component/show_more.html.twig' %}

<div class="not-prose" id="{{ 'reviews'|trans() }}">
  {% for message in reviews %}
    {% if loop.index == 2 %}
      {{ block('before') }}
    {% endif %}
    {% include '@PushwordConversation/conversation/review.html.twig' with {
      review: message,
    } %}
    {% if loop.last and loop.index > 3 %}
      {{ block('after') }}
    {% endif %}
  {% endfor %}
</div>