{% for message in messages %}
<div class="{{ message_wrapper_class|default('my-1 p-6 pt-2 shadow-lg ' ~ (loop.index is odd ? 'bg-gray-50' : '')) }}">
        {{ message.content|markdown }}
        <footer class="block text-gray-800 text-sm italic">{{ 'conversationMessagePostedOn'|trans }}
            {{ message.createdAt|format_datetime('medium', 'short') }}
            {{ message.authorName ? ('conversationMessageBy'|trans) ~ message.authorName : '' }}
        </footer>
</div>
{% endfor %}
