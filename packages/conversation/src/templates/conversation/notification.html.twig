
{% for message in messages %}
<div class="mb-4">
    <div style="padding:10px; background:#eee; border-radius:5px; margin-bottom:10px;">{{ message.content|u.truncate(250, '...')|markdown }}</div>

    <p>
        {% if (message.authorEmail) %}{{ 'adminConversationNotificationSentBy'|trans({'%authorName%': message.authorName ?? '', '%authorEmail%': message.authorEmail}) }}<br>{% endif %}
        <a href="{{ url('admin_conversation_message_edit', {id: message.id}) }}">{{ 'admin.action.edit'|trans({}, 'messages') }}</a>
    </p>
</div>
{% endfor %}
