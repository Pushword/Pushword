{% extends '@EasyAdmin/page/content.html.twig' %}

{% block body_class %}pw-legacy-admin bg-gray-50 min-h-screen{% endblock %}

{% block head_stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/pushwordadmin/admin.css') }}">
    {% block stylesheets %}{% endblock %}
{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    <script src="/bundles/pushwordadmin/monaco/app.js"></script>
    <script src="{{ asset('/bundles/pushwordadmin/admin.js') }}"></script>
    {% block javascripts %}{% endblock %}
{% endblock %}

{% block content_title %}
    {% block title %}{{ 'admin.label.tools'|trans }}{% endblock %}
{% endblock %}

{% block page_actions %}
    {% block actions %}{% endblock %}
{% endblock %}

{% block main %}
    <div class="max-w-screen-xl mx-auto px-4 w-full">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="mb-4 rounded-md border px-4 py-3 text-sm {{ label }}">
                    {{ message|raw }}
                </div>
            {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}
    </div>
{% endblock %}
