{% extends view('/user/layout.html.twig') %}

{% block title %}{{ 'setPasswordTitle'|trans }}{% endblock %}

{% block main_content %}
<form method="post" class="mt-8 space-y-6">
    {% if error %}
        <div role="alert" id="password-error" class="flex items-center gap-3 p-5 text-red-800 bg-red-50 rounded">
            <svg class="w-5 h-5 shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd"/></svg>
            <span>{{ error|trans }}</span>
        </div>
    {% endif %}

    <div class="-space-y-px rounded-md shadow-xs">
        <div>
            <label for="password" class="sr-only">{{ 'newPassword'|trans }}</label>
            <input type="password" id="password" name="password" required
                   minlength="7" autofocus
                   class="relative block w-full px-3 py-2 text-gray-900 placeholder-gray-500 border border-gray-300 rounded-none appearance-none rounded-t-md focus:outline-hidden focus:ring-primary focus:border-primary focus:z-10 sm:text-sm"
                   placeholder="{{ 'newPassword'|trans }}"
                   {% if error %}aria-describedby="password-error" aria-invalid="true"{% endif %} />
        </div>
        <div>
            <label for="password_confirm" class="sr-only">{{ 'confirmPassword'|trans }}</label>
            <input type="password" id="password_confirm" name="password_confirm" required
                   minlength="7"
                   class="relative block w-full px-3 py-2 text-gray-900 placeholder-gray-500 border border-gray-300 rounded-none appearance-none rounded-b-md focus:outline-hidden focus:ring-primary focus:border-primary focus:z-10 sm:text-sm"
                   placeholder="{{ 'confirmPassword'|trans }}" />
        </div>
    </div>

    <button type="submit" class="relative flex justify-center w-full px-4 py-2 text-sm font-medium text-white border border-transparent rounded-md bg-primary group hover:opacity-75 focus:outline-hidden focus:ring-2 focus:ring-offset-2 focus:ring-primary">
        <span class="absolute inset-y-0 left-0 flex items-center pl-3">
            <svg class="w-5 h-5 text-primary group-hover:text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
            </svg>
        </span>
        {{ 'setPasswordButton'|trans }}
    </button>
</form>
{% endblock %}
