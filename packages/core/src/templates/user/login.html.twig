{% extends view('/user/layout.html.twig') %}

{% block title %}{{ 'securityLoginTitle'|trans }}{% endblock %}
{# tailwind UI #}
{% block main_content %}
{% if app.user %}
    <div class="mb-3">
        {{ 'securityLoginLoggedInAs'|trans({'%username%': app.user.username}) }}, <a href="{{ path('pushword_logout') }}">{{ 'securityLogout'|trans }}</a>
    </div>
{% endif %}

{% for message in app.flashes('error') %}
    <div class="p-5 mb-4 text-red-500 bg-red-200">{{ message|trans }}</div>
{% endfor %}

{% if error %}
    <div class="p-5 mb-4 text-red-500 bg-red-200">{{ error.messageKey|trans(error.messageData) }}</div>
{% endif %}

{% if step|default('email') == 'email' %}
{# Step 1: Email entry #}
<form method="post" action="{{ path('pushword_login_check_email') }}" class="mt-8 space-y-6">
    <div class="rounded-md shadow-xs">
        <div>
            <label for="inputEmail" class="sr-only">{{ 'securityLoginEmail'|trans }}</label>
            <input type="email" id="inputEmail" name="email" value="{{ last_username }}" required="required" autofocus
                   class="relative block w-full px-3 py-2 text-gray-900 placeholder-gray-500 border border-gray-300 rounded-md appearance-none focus:outline-hidden focus:ring-primary focus:border-primary focus:z-10 sm:text-sm"
                   placeholder="{{ 'securityLoginEmail'|trans }}" />
        </div>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <div>
        <button type="submit" class="relative flex justify-center w-full px-4 py-2 text-sm font-medium text-white border border-transparent rounded-md bg-primary group hover:opacity-75 focus:outline-hidden focus:ring-2 focus:ring-offset-2 focus:ring-primary">
          <span class="absolute inset-y-0 left-0 flex items-center pl-3">
            <svg class="w-5 h-5 text-primary group-hover:text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </span>
          {{ 'securityLoginContinue'|trans }}
        </button>
    </div>
</form>

{% if oauth_google|default(false) or oauth_microsoft|default(false) %}
<div class="relative mt-6">
    <div class="absolute inset-0 flex items-center">
        <div class="w-full border-t border-gray-300"></div>
    </div>
    <div class="relative flex justify-center text-sm">
        <span class="px-2 bg-white text-gray-500">{{ 'oauthOrContinueWith'|trans }}</span>
    </div>
</div>

<div class="mt-6 grid {% if oauth_google|default(false) and oauth_microsoft|default(false) %}grid-cols-2{% else %}grid-cols-1{% endif %} gap-3">
    {% if oauth_google|default(false) %}
    <a href="{{ path('pushword_oauth_google_start') }}" class="flex items-center justify-center w-full px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-hidden focus:ring-2 focus:ring-offset-2 focus:ring-primary">
        <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
        </svg>
        Google
    </a>
    {% endif %}
    {% if oauth_microsoft|default(false) %}
    <a href="{{ path('pushword_oauth_microsoft_start') }}" class="flex items-center justify-center w-full px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-hidden focus:ring-2 focus:ring-offset-2 focus:ring-primary">
        <svg class="w-5 h-5 mr-2" viewBox="0 0 23 23" xmlns="http://www.w3.org/2000/svg">
            <path fill="#f35325" d="M1 1h10v10H1z"/>
            <path fill="#81bc06" d="M12 1h10v10H12z"/>
            <path fill="#05a6f0" d="M1 12h10v10H1z"/>
            <path fill="#ffba08" d="M12 12h10v10H12z"/>
        </svg>
        Microsoft
    </a>
    {% endif %}
</div>
{% endif %}

{% else %}
{# Step 2: Password entry #}
<form method="post" class="mt-8 space-y-6">
    <div class="-space-y-px rounded-md shadow-xs">
        <div>
            <label for="inputEmail" class="sr-only">{{ 'securityLoginEmail'|trans }}</label>
            <input type="email" id="inputEmail" name="email" value="{{ last_username }}" readonly
                   class="relative block w-full px-3 py-2 text-gray-900 bg-gray-100 placeholder-gray-500 border border-gray-300 rounded-none appearance-none rounded-t-md focus:outline-hidden focus:ring-primary focus:border-primary focus:z-10 sm:text-sm" />
        </div>

        <div>
            <label for="inputPassword" class="sr-only">{{ 'securityLoginPassword'|trans }}</label>
            <input type="password" id="inputPassword" name="password" required="required" autofocus
                   class="relative block w-full px-3 py-2 text-gray-900 placeholder-gray-500 border border-gray-300 rounded-none appearance-none rounded-b-md focus:outline-hidden focus:ring-primary focus:border-primary focus:z-10 sm:text-sm"
                   placeholder="{{ 'securityLoginPassword'|trans }}" />
        </div>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <div class="flex items-center justify-between">
        <div class="flex items-center">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" class="w-4 h-4 border-gray-300 rounded text-primary focus:ring-primary" checked />
            <label for="remember_me" class="block ml-2 text-sm text-gray-900">{{ 'securityLoginRememberMe'|trans }}</label>
        </div>
        <a href="{{ path('pushword_login') }}" class="text-sm text-primary hover:underline">{{ 'securityLoginChangeEmail'|trans }}</a>
    </div>

    <div>
        <button type="submit" class="relative flex justify-center w-full px-4 py-2 text-sm font-medium text-white border border-transparent rounded-md bg-primary group hover:opacity-75 focus:outline-hidden focus:ring-2 focus:ring-offset-2 focus:ring-primary">
          <span class="absolute inset-y-0 left-0 flex items-center pl-3">
            <svg class="w-5 h-5 text-primary group-hover:text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
            </svg>
          </span>
          {{ 'securityLoginLabelButton'|trans }}
        </button>
    </div>
</form>
{% endif %}
{% endblock %}
