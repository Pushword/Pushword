{% extends view('/base.html.twig') %}

{% block title %}{{ 'errorTitle'|trans }}{% endblock %}

{% block body %}
<div class="container mx-auto mt-5">
    <h1>{{ 'errorTitle'|trans|raw }}</h1>
    <p>{{ (status_code is defined ? 'errorServerSay'|trans ~ ' <em>' ~ status_code ~ '</em> <em>' ~ status_text ~ '</em>' : null)|raw }}</p>
    <p>{{ 'errorDescription'|trans|raw }}</p>
</div>
{% endblock %}
