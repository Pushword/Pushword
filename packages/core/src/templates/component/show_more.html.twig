{% block before %}
<div class="show-more {{ showMoreExtraClass|default('') }}">
  <input type="checkbox" id="{{ id }}" class="hidden show-hide-input">
  <div class="overflow-hidden transition-all delay-75 duration-300" data-acinb="max-h-[250px]" id="csm_{{ id }}">
{% endblock %}

{% block after %}
    <div class="text-center mt-3 hidden" data-acinb="block">
      {# ↥ #}
      <label
        class="text-3xl text-gray-500 cursor-pointer after:content-['\21A5'] after:cursor-pointer"
        onclick="window.ShowMore.close(this)">
      </label>
    </div>
  </div>
  <div
    class="show-more-btn transition-all delay-75 duration-300 text-center pt-[80px] -mt-[100px] h-[100px] bg-linear-to-b from-transparent {{ showMoreBackground|default('via-white to-white') }} relative z-10 mb-14 hidden cursor-pointer"
    data-acinb="block"
    onclick="window.ShowMore.open(this)">
    {# ↧ #}
    <label
      class="text-4xl inline-block w-full text-gray-500 after:content-['\21A7'] cursor-pointer">
    </label>
  </div>
</div>
{% endblock %}