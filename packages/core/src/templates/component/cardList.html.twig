
{% set cardTemplate = cardTemplate|default(view('/component/card.html.twig')) %}

<ul
  {% if id is defined and id is not null %}id="{{ id }}"{% endif %}
  class="{{ wrapperClass|default('not-prose flex flex-row my-5 flex-wrap justify-center mx-auto') }}">
  {%- for item in items -%}
    <li class="w-full px-1 my-1 sm:w-1/2 md:w-1/3">
      {{- include(cardTemplate, isInstanceOfPage(item)
      ? { page: item }
      : {
        page: item.page ?? null,
        image: item.image ?? null,
        imageAlt: item.imageAlt ?? null,
        title: item.title,
        link: item.link ?? null,
        obfuscateLink: item.obfuscateLink ?? false,
        date: item.date ?? null,
        title_tag: item.title_tag ?? null,
        buttonLink: item.buttonLink ?? null,
        buttonLinkLabel: item.buttonLinkLabel ?? null,
        description: item.description ?? null,
      }) -}}
    </li>
  {%- endfor -%}
</ul>