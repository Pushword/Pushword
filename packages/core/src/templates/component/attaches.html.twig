{# @var id string #}
{# @var title string #}
{# @var url string #}
{# @var size int #}

{% apply unprose %}
<div{{ blockWrapperId(id ?? '') }} class="flex flex-row p-3 my-6 border border-gray-400 rounded clickable cursor-pointer max-w-screen-sm mx-auto">
    <div class="w-16 px-3 text-gray-400">
        {{ svg('file-alt', {class: 'w-8 pt-2 fill-current'}) }}
    </div>
    <div class="grow pt-3" style="flex-grow: 1">
        <div class="font-bold">{{ title|raw }}</div>
        <div class="text-sm text-gray-500">{{ filesize(size) }}{{ 'bytes_abbreviation'|trans }}</div>
    </div>

    {{ link(svg('download', {class: 'w-10 fill-current'}), url, {class: 'block text-gray-600 p-3 focus:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 rounded', download: url}) }}
</div>
{% endapply %}