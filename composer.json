{
  "name": "pushword/pushword",
  "replace": {
    "piedweb/theme-component-bundle": "self.version",
    "pushword/admin": "self.version",
    "pushword/conversation": "self.version",
    "pushword/core": "self.version",
    "pushword/flat-file": "self.version",
    "pushword/page-scanner": "self.version",
    "pushword/page-update-notifier": "self.version",
    "pushword/static-generator": "self.version",
    "pushword/template-editor": "self.version"
  },
  "description": "Monorepo for pushword CMS and officially maintained extensions.",
  "license": "MIT",
  "require": {
    "php": ">=8.4",
    "babdev/pagerfanta-bundle": "^4.0",
    "caseyamcl/toc": "^4.0",
    "cocur/slugify": "^4.6",
    "doctrine/doctrine-bundle": "^2.2.2",
    "doctrine/doctrine-fixtures-bundle": "^4",
    "doctrine/orm": "^3.0",
    "fortawesome/font-awesome": "^7",
    "imagine/imagine": "^1.3",
    "intervention/image": "^3.2",
    "jolicode/jolitypo": "^1.4",
    "league/commonmark": "^2.7",
    "michelf/php-markdown": "^2",
    "nette/utils": "^4.0",
    "pagerfanta/twig": "^4.1",
    "pentatrion/vite-bundle": "*",
    "piedweb/curl": "@dev || ^0.1",
    "piedweb/extractor": "@dev || ^0.1.19",
    "piedweb/linksimprover": "^0.0.8",
    "piedweb/render-html-attributes": "^0",
    "runtime/frankenphp-symfony": "^0.2.0",
    "sonata-project/admin-bundle": "^4",
    "sonata-project/doctrine-orm-admin-bundle": "^4.9",
    "spatie/image-optimizer": "^1.3",
    "spatie/yaml-front-matter": "^2.0",
    "symfony/asset": "^7.3",
    "symfony/cache": "^7.3",
    "symfony/console": "^7.3",
    "symfony/expression-language": "^7.3",
    "symfony/finder": "^7.3",
    "symfony/form": "^7.3",
    "symfony/framework-bundle": "^7.3",
    "symfony/lock": "^7.3",
    "symfony/mailer": "^7.3",
    "symfony/monolog-bundle": "^3.7",
    "symfony/process": "^7.3",
    "symfony/security-bundle": "^7.3",
    "symfony/security-csrf": "^7.3",
    "symfony/serializer": "^7.3",
    "symfony/stimulus-bundle": "^2.23",
    "symfony/translation": "^7.3",
    "symfony/twig-bundle": "^7.3",
    "symfony/validator": "^7.3",
    "symfony/web-link": "^7.3",
    "symfony/webpack-encore-bundle": "^2.0",
    "symfony/yaml": "^7.3",
    "thecodingmachine/safe": "*",
    "twig/intl-extra": "^3.2",
    "vich/uploader-bundle": "^2.0",
    "villfa/invert-color": "^0.5"
  },
  "require-dev": {
    "brianium/paratest": "^7.14",
    "composer/composer": "*",
    "friendsofphp/php-cs-fixer": "*",
    "phpstan/extension-installer": "*",
    "phpstan/phpstan": "*",
    "phpstan/phpstan-doctrine": "*",
    "phpstan/phpstan-phpunit": "*",
    "phpstan/phpstan-strict-rules": "*",
    "phpstan/phpstan-symfony": "*",
    "phpunit/phpunit": "*",
    "rector/rector": "*",
    "squizlabs/php_codesniffer": "*",
    "symfony/debug-bundle": "*",
    "symfony/dotenv": "*",
    "symfony/maker-bundle": "*",
    "symfony/panther": "*",
    "symfony/phpunit-bridge": "*",
    "symfony/profiler-pack": "*",
    "symplify/config-transformer": "*",
    "symplify/monorepo-builder": "*",
    "tomasvotruba/unused-public": "^2.0",
    "twigstan/twigstan": "dev-main",
    "vincentlanglet/twig-cs-fixer": "*"
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.0.x-dev"
    },
    "public-dir": "packages/skeleton/public"
  },
  "autoload": {
    "psr-4": {
      "Pushword\\Admin\\": "packages/admin/src",
      "Pushword\\Conversation\\": "packages/conversation/src",
      "Pushword\\Core\\": "packages/core/src",
      "Pushword\\Flat\\": "packages/flat/src",
      "Pushword\\PageScanner\\": "packages/page-scanner/src",
      "Pushword\\PageUpdateNotifier\\": "packages/page-update-notifier/src",
      "Pushword\\StaticGenerator\\": "packages/static-generator/src",
      "Pushword\\Version\\": "packages/version/src",
      "Pushword\\AdminBlockEditor\\": "packages/admin-block-editor/src",
      "Pushword\\TemplateEditor\\": "packages/template-editor/src",
      "Pushword\\AdvancedMainImage\\": "packages/advanced-main-image/src",
      "Pushword\\Installer\\": "packages/installer/src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\": "packages/skeleton/src",
      "Pushword\\Admin\\Tests\\": "packages/admin/tests",
      "Pushword\\Conversation\\Tests\\": "packages/conversation/tests",
      "Pushword\\Core\\Tests\\": "packages/core/tests",
      "Pushword\\Flat\\Tests\\": "packages/flat/tests",
      "Pushword\\PageScanner\\Tests\\": "packages/page-scanner/tests",
      "Pushword\\PageUpdateNotifier\\Tests\\": "packages/page-update-notifier/tests",
      "Pushword\\StaticGenerator\\Tests\\": "packages/static-generator/tests",
      "Pushword\\Version\\Tests\\": "packages/version/tests",
      "Pushword\\AdminBlockEditor\\Tests\\": "packages/admin-block-editor/tests",
      "Pushword\\TemplateEditor\\Tests\\": "packages/template-editor/tests",
      "Pushword\\AdvancedMainImage\\Tests\\": "packages/advanced-main-image/tests"
    }
  },
  "scripts": {
    "console": "cd packages/skeleton && php bin/console $2",
    "dev": "cd packages/skeleton && symfony server:start -d",
    "stan": "vendor/bin/phpstan analyze packages/*/src",
    "test": "./.scripts/test && composer validate-monorepo",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
    "rector": "vendor/bin/rector process && composer format",
    "format": "PHP_CS_FIXER_IGNORE_ENV=1 vendor/bin/php-cs-fixer fix rector.php && PHP_CS_FIXER_IGNORE_ENV=1 vendor/bin/php-cs-fixer fix",
    "assets": "./.scripts/generate-assets",
    "publish-js-helper": "cd packages/js-helper && npm version patch && cd ../../ && git add packages/js-helper/. && git commit -m 'update pushword/js-helper version' && git push && cd packages/js-helper && npm publish",
    "docs": "./.scripts/generate-docs",
    "reset-skeleton": "./.scripts/reset-skeleton",
    "validate-monorepo": "vendor/bin/monorepo-builder validate",
    "post-update-cmd": [
      "composer console cache:clear"
    ]
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "phpstan/extension-installer": true,
      "symfony/runtime": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
